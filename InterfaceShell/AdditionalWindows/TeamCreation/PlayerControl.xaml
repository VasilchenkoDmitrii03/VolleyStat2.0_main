<UserControl x:Class="InterfaceShell.AdditionalWindows.PlayerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InterfaceShell.AdditionalWindows"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal" >

        <TextBlock Margin="5">#</TextBlock>
        <TextBox Name="PlayerNumberTextBox" Width="50" Margin="5"  TextChanged="TextBox_TextChanged"/>
        <TextBlock Margin="5">Last name</TextBlock>
        <TextBox Name="LastNameTextBox" Width="100" Margin="5"  TextChanged="TextBox_TextChanged"/>
        <TextBlock Margin="5">First name</TextBlock>

        <TextBox Name="FirstNameTextBox" Width="100" Margin="5" TextChanged="TextBox_TextChanged"/>
        <TextBlock Margin="5">Amplua</TextBlock>

        <ComboBox Name="RoleComboBox" Width="100" Margin="5" SelectionChanged="TextBox_TextChanged">
        </ComboBox>
        <TextBlock Margin="5">Height</TextBlock>

        <TextBox Name="HeightTextBox" Width="50" Margin="5" TextChanged="TextBox_TextChanged" />
    </StackPanel>
</UserControl>
